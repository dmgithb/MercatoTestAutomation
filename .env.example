# Environment Configuration - Mercato Jupiter Test Automation

# Application Under Test
BASE_URL=http://qa.mercato-retailer-jupiter.local/
API_BASE_URL=https://api.mercato-retailer-jupiter.local

# Test Environment Settings
TEST_ENV=qa
TEST_TIMEOUT=30000
RETRY_COUNT=2
PARALLEL_WORKERS=4

# Test Credentials (DO NOT commit actual values)
TEST_USER_EMAIL=testuser@example.com
TEST_USER_PASSWORD=TestPassword123!

# Browser Configuration
DEFAULT_BROWSER=chromium
HEADLESS=true
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080
SLOW_MO=0

# Media Capture Settings
VIDEO=retain-on-failure
SCREENSHOT=only-on-failure
TRACE=retain-on-failure

# Reporting Configuration
REPORT_PATH=./test-results
REPORT_FOLDER=playwright-report
RESULTS_FOLDER=test-results

# CI/CD Settings
CI_PARALLEL_JOBS=3
CI_RETRY_COUNT=1
CI_TIMEOUT=60000

# Slack Integration (Optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Performance Testing
PERFORMANCE_THRESHOLD_MS=3000
LIGHTHOUSE_ENABLED=false

# Visual Regression Testing
VISUAL_REGRESSION_ENABLED=false
VISUAL_THRESHOLD=0.2

# Security Testing
SECURITY_SCAN_ENABLED=false

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_ENDPOINT=http://localhost:3000/metrics

# Database (if needed for test data)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=test_db
# DB_USER=test_user
# DB_PASSWORD=test_pass
GENERATE_HTML_REPORT=true
GENERATE_JSON_REPORT=true
